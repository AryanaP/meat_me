<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2">
      <h1>Create a new meal</h1>

      <%= simple_form_for(@meal) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :name %>
          <%= f.input :address %>
          <%= f.input :city, collection: ["Paris"] %>
          <%= f.input :date %>
          <%= f.input :description %>
          <%= f.input :food_type, collection: ["French", "Japanese", "Chinese", "Indian", "Italian"] %>
          <%= f.input :meeting_type, collection: ["Fun", "Professionnal", "Hot"] %>
        </div>

        <div class="form-actions">
          <%= f.button :submit %>
        </div>
      <% end %>
      <%= link_to 'Back', meals_path %>
    </div>
  </div>
</div>




