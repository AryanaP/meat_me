
<h1 class="text-center">My dates</h1>

<div class="container">
  <div class="row">
  <% @meetings.each do |meeting| %>
    <div class="col-xs-12 col-sm-4">
      <div class="card"><img src="https://www.placehold.it/300/300">
        <div class="card-category">Host</div>
        <div class="card-description">

          <ul class="list-inline">
            <li><%= link_to 'Approve', "", class: "btn btn-xs btn-primary", id: "approve" %></li>
            <li><%= link_to 'Deny', "", class: "btn btn-xs btn-primary" %></li>
          </ul>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>

<div class="container">
  <div class="row">
  <% @guest_meetings.each do |meeting| %>
    <div class="col-xs-12 col-sm-4">
      <div class="card"><img src="https://www.placehold.it/300/300">
        <div class="card-category">Host</div>
        <div class="card-description">
          <h2><%= meeting.meal.name %></h2>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
