<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <div class="facebook-connect">
        <%= render "devise/shared/links" %>
      </div>
      <div class="signup-or-separator">
          <span class="h6 signup-or-separator--text">or</span>
          <hr>
      </div>
      <div class="signup-form">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <div class="form-group">
              <div class="input-group">
              <div class="input-group-addon"><i class="fa fa-envelope-o" aria-hidden="true"></i></div>
                <%= f.input :email, required: false, autofocus: true, label: false, placeholder: "Email" %>
              </div>
            </div>
            <div class="form-group">
              <div class="input-group">
              <div class="input-group-addon"><i class="fa fa-lock" aria-hidden="true"></i></div>
                <%= f.input :password, required: false, label: false, placeholder: "Password" %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="form-actions">
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>
          </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "btn btn-primary", style: "width: 100%" %>
        </div>
        <% end %>
      </div>
      <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
      <hr>
      <div class="already-member">
          <p>Donâ€™t have an account?</p>
          <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-default" %>
      </div>
    </div>
  </div>
</div>

