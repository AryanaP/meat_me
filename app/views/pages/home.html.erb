<!-- Banner code -->
<div class="banner-background" style="background-image: linear-gradient(-225deg, rgba(0,150,190,0.3) 0%, rgba(0,36,61,0.5) 50%), url('assets/banner.jpeg');">
  <div class="text-center banner-content">
    <h1>(m)eat-me</h1>
    <p>Love at first taste</p>
    <form class="form-inline" action="#">
      <input class="form-control input-lg" placeholder="type of food" type="text">
      <input class="form-control input-lg" placeholder="personality tag" type="text">
      <a class="btn btn-yours" href="#">(m)eat someone</a>
    </form>
  </div>
</div>
<!-- Features code -->
<div class="container text-center padded features">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-md-3">
      <%= image_tag("heart.png") %>
      <h2>All you need is love</h2>
      <p>Eat well and prepare to fall in love</p>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-3">
      <%= image_tag("beer.png") %>
      <h2>Meet people in a relaxed environement</h2>
      <p>Have drinks with each other</p>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-3">
      <%= image_tag("dollar.png") %>
      <h2>Save money</h2>
      <p>Who ever said eating well would be expensive</p>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-3">
    <%= image_tag("globe.png") %>
      <h2>Enjoy food from all over the world</h2>
      <p>Learn how to cook meals from different countries and cultures</p>
    </div>
  </div>
</div>
<!-- Cards code -->
