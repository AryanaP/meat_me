  <div class="container">
  <h2>Last meals proposed</h2>
    <div class="row">
      <div class="col-xs-12 col-sm-4">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('images/burger.jpeg');">
          <div class="card-category">Paris, France</div>
          <div class="card-description">
            <h2>Seb</h2>
            <p>Truly passionate about american culture and food</p>
          </div>
          <img class="card-user avatar avatar-large" src="images/seb.jpg" />
          <a class="card-link" href="profiles/seb.html">#</a>
        </div>
      </div>
    </div>
  </div>
 </div>
